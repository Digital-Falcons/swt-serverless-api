{
	"name": "swt-serverless-api",
	"version": "0.0.4-beta",
	"private": false,
	"description": "Bootstrap a serverless API using Hono framework with TypeScript and Zod for validation.",
	"licenses": [
		{
			"type": "Apache-2.0",
			"url": "https://www.apache.org/licenses/LICENSE-2.0"
		}
	],
	"main": "./dist/index.js",
	"bin": {
		"gen-bruno": "./dist/cli/generate-bruno.js"
	},
	"type": "module",
	"scripts": {
		"remove-dist": "rm -rf dist",
		"build:package": "vite build --ssr src/index.ts --outDir dist/package",
		"build:cli": "tsc --outDir dist/cli src/cli/generate-bruno.ts",
		"build:dev": "tsc",
		"build": "pnpm run remove-dist && tsc"
	},
	"keywords": [
		"serverless",
		"api",
		"hono",
		"typescript",
		"zod"
	],
	"author": "sw-tech",
	"repository": {
		"type": "git",
		"url": "git+git@github.com:Digital-Falcons/swt-serverless-api.git",
		"directory": "package"
	},
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.11.0",
	"dependencies": {
		"hono": "^4.10.2",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/minimist": "^1.2.5",
		"@types/node": "^24.9.1",
		"minimist": "^1.2.8",
		"prettier": "^3.6.2",
		"prettier-plugin-organize-imports": "^4.3.0",
		"typescript": "^5.9.3",
		"unplugin-dts": "1.0.0-beta.6",
		"vite": "^7.1.5",
		"vite-plugin-dts": "^4.5.4"
	}
}
